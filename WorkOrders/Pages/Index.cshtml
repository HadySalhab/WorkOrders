@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <h1 class="display-4">Work Orders</h1>

    <table class="table">
        <tr>
            <th>Order Id</th>
            <th>Order Number</th>
            <th>Created</th>
            <th>ETA</th>
            <th>Client</th>
            <th>State</th>
            <th>Status</th>
        </tr>
        @foreach (var wo in Model.WorkOrders)
        {
            <tr>
                <td>@wo.Id</td>
                <td>@wo.WorkOrderNumber</td>
                <td>@wo.CreatedDate</td>
                <td>@wo.ETA</td>
                <td>@wo.Client.Name</td>
                <td>@wo.State.Name</td>
                <td>@wo.Status.Name</td>
                <td>
                    <a class="p-0"
                       asp-page="./Edit"
                       asp-route-workorderId="@wo.Id">
                        Edit
                    </a>
                    <form method="post">
                        <button type="submit" asp-route-workorderId="@wo.Id" asp-page="./Delete" class="btn btn-danger">Delete!</button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <a asp-page="./Edit" class="btn btn-primary">Add New</a>
</div>
